<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="question_title_style" parent="android:Widget.TextView">
        <item name="android:background">@color/colorQuestionTitle</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/q_padding_left</item>
        <item name="android:paddingTop">@dimen/q_padding_top</item>
        <item name="android:paddingBottom">@dimen/q_padding_bottom</item>
        <item name="android:textSize">@dimen/question_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="radio_style" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="checkbox_style" parent="android:Widget.Material.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

</resources>
